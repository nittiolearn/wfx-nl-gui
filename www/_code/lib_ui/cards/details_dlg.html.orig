<style>
/*img {
    position: absolute;
    right: 0px;
    top: 0px;
    z-index: -1;
}*/
.nl-cv-table {
	position: relative;
	top : -100px;
	left: 2%;
	width: 50%;
	font-size: 125%;
	color: #380000;
}
tr td:first-child {
	width : 25%;
	font-weight: bold;
}
tr td:last-child {
	width : 50%
}
</style>
<nl-dlg title='{{card.title}}'>
    <nl-dlg-help>You can access additional information about a card by clicking the 'details' link on bottom of the card if available.</nl-dlg-help>
    <nl-dlg-content class='nl-card-details-dlg'>
        <img ng-src='{{card.icon}}'></img>
        <div class='nl-details-dlg-body' ng-bind-html='card.details.help'>
        </div>
        <table ng-if='card.details.multiLineLinks'>
            <tr ng-repeat='link in card.details.links' class='nl-border-bottom'>
                <td class='nl-20'><a ng-href='{{link.url}}'>{{link.title}}</a></td>
                <td>{{link.help}}</td>
            </tr>
        </table>
        <table ng-if='!card.details.multiLineLinks' class='nl-cv-table'>
        	<tr>
        		<td>Name</td>
        		<td>{{card.title}}.</td>
        	</tr>
        	<tr><td>Description</td>
        		<td>{{card.description}}.</td>
        	</tr>
        	<tr>
        		<td>Content</td>
        		<td>{{card.content}}.</td>
        	</tr>
        	<tr>
        		<td>Author</td>
        		<td>{{card.owner}}.</td>
        	</tr>
        	<tr>
        		<td>Author name</td>
        		<td>{{card.ownerName}}.</td>
        	</tr>
        	<tr>
        		<td>Group name</td>
        		<td>{{card.groupName}}.</td>
        	</tr>
        	<tr>
        		<td>Updated</td>
        		<td>{{card.updatedBy}}.</td>
        	</tr>
        	<tr>
        		<td>Updated by name</td>
        		<td>{{card.updatedByName}}.</td>
        	</tr>
        	<tr>
        		<td>created</td>
        		<td>{{card.created}}.</td>
        	</tr>
        	<tr>
        		<td>Updated</td>
        		<td>{{card.updated}}.</td>
        	</tr>
        </table>
    </nl-dlg-content>
</nl-dlg>
